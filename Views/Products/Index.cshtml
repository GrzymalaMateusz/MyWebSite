@model IEnumerable<MyWebsite.Models.Product>

@{
    ViewBag.Title = "Produkty";
}
<div class="container">
    <div class="row">
            @{Html.RenderAction("Menu", "Admin");}
        <div class="col-12 pl-50px">

            <h2 class="float-left">Produkty</h2>

            <div class="float-right">
                <a href="@Url.Action("Create","Products")" class="btn btn-default list-btn-rounded float-right"><i class="fa fa-plus" aria-hidden="true"></i></a>
                <a href="@Url.Action("Index","ProductCategories")" class="btn btn-default list-btn-rounded float-right"><i class="fa fa-list" aria-hidden="true"></i></a>
            </div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prine)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShortDescription)
                    </th>
                    <th>
                    </th>
                </tr>
                @if (Model.Count() == 0)
    {
            <tr>
                <td>
                    <div class="alert alert-info">
                        <strong>Informacja!</strong> Brak Produktów do wyświetlenia.
                    </div>
                </td>
            </tr>
}
                @foreach (var item in Model)
    {
            <tr >
                <td>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td class="list-btn">
                    <a href="@Url.Action("Edit", new { id = item.Id })" title="Edytuj"><i class="fa fa-pencil list-edit-btn" aria-hidden="true"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" title="Usuń"><i class="fa fa-trash list-delete-btn" aria-hidden="true"></i></a>
                </td>
            </tr>
}

            </table>
        </div>
    </div>
</div>