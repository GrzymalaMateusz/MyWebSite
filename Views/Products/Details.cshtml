@model MyWebsite.Models.Product

@{
    ViewBag.Title = @Html.DisplayFor(model => model.Name);
}
<div class="container">
    <div id="product">

        <div class="row">
            <div class="col-12">
                <div class="site-title text-center">
                    <h2>@ViewBag.Title</h2>
                    <div class="breadcrumb-site-title">
                        <ul class="breadcrumb">
                            <li><a href="@Url.Action( "Index", "Home")">Strona domowa</a></li>
                            <li><a href="@Url.Action( "Products", "Products")">Produkty</a></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="main_img">
                    <img src="~/Images/Product/@Html.DisplayFor(model => model.Thumb)" alt=" @Html.DisplayFor(model => model.Name)" itemprop="image" align="left">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="main_desc">
                    <span class="price">
                        Cena <b>@Html.DisplayFor(model => model.Prine)</b> zł
                    </span>
                    <br>
                    <br>
                    <p>@Html.DisplayFor(model => model.ShortDescription)</p>
                    <span>Kategoria:</span> Strony
                    <div class="row">
                        <br>
                    </div>
                    <div class="col-12">
                        <a href="@Html.DisplayFor(model => model.Demo)" class="btn btn-warning" target="_blank" style="width: 100%;">
                            Demo
                        </a>
                    </div>
                </div>
            </div>
            </div>
        <div class="row">
            <div class="col-12 product-gallery">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-2 product-image">
                        <a href="http://strefaportali.pl/web/files/product/0a9b9da0ea8c1f99c18dd0d58c4adae4s1.png">
                            <img src="http://strefaportali.pl/web/files/product/0a9b9da0ea8c1f99c18dd0d58c4adae4s1.png" class="product-img">
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-2  product-image">
                        <a href="http://strefaportali.pl/web/files/product/874f59f98c8b97445e8facfd28a64649a1.png">
                            <img src="http://strefaportali.pl/web/files/product/874f59f98c8b97445e8facfd28a64649a1.png" class="product-img" >
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-2 product-image">
                        <a href="http://strefaportali.pl/web/files/product/3778fb74e02eaa12ef3c382baee4fab1a2.png">
                            <img src="http://strefaportali.pl/web/files/product/3778fb74e02eaa12ef3c382baee4fab1a2.png" class="product-img">
                        </a>
                    </div>
                    
                </div>
            </div>
            <div class="col-12">
                <h3>
                    @Html.DisplayNameFor(model => model.Description)
                </h3>
                <hr />
                <h5>
                    @Html.DisplayFor(model => model.Description)
                </h5>
                @if (Request.IsAuthenticated)
    {
            <p>
                @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Wróć do listy", "Index")
            </p>
}
                <h3>
                    Formularz Zamówienia
                </h3>
                <hr />
                
                    <form class="form-horizontal" method="POST">
                        <fieldset>
                            <input value="@Html.DisplayFor(model => model.Id)" name="ProductId" type="hidden">
                            <div class="form-group">
                                <div class="col-12">
                                    <input class="form-control" placeholder="Mail kontaktowy" name="Email" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <textarea style="height: 120px;" class="form-control" name="info" placeholder="Informacje dodatkowe - jeśli chcesz dodać dodatkowe informacje napisz je tutaj"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <h3>Dane do zamówienia</h3>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <input class="form-control" name="Name" placeholder="Nazwa / Imię i nazwisko " type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <input class="form-control" name="Street" placeholder="Ulica" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <input class="form-control" name="City" placeholder="Kod poczotwy, Miejscowość" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <button type="submit" class="form-control btn btn-success">Zamawiam</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
               
            </div>

            </div>
            

        </div>
    </div>
